
@model Product_management.Models.Product






@if (TempData["Message"] != null)
{
    var messageType = TempData["MessageType"]?.ToString() ?? "info"; // Default to 'info' type

    <div id="tempMessage" class="alert alert-@(messageType)" role="alert">
        @TempData["Message"]
    </div>
}

@*@if (TempData["msg"] != null)
    {
    <div class="alert alert-danger">@TempData["msg"]</div>}*@

<div class="container">
    <h2>View Products</h2>

    <div class="view-page">
        <!-- Existing content of the View page -->
        <!-- Add Create Button -->

    </div>
    <br />
    <table id="productTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Product Id</th>
                <th>Category Id</th>
                <th>Category Name</th>
                <th>Product Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="myTable">
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.CategoryId</td>
                    <td>@item.categoryName</td>
                    <td>@item.ProductName</td>


                    <td>
                        <a href="@Url.Action("Edit", "Product", new { id = item.ProductId})" class="btn btn-primary">Edit</a>
                        <a href="@Url.Action("Details", "Product", new { id = item.ProductId})" class="btn btn-success">Details</a>
                        <a href="@Url.Action("Delete", "Product", new { id = item.ProductId })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap5.min.js"></script>

<link href="~/Content/dataTables.bootstrap5.min.css" rel="stylesheet" />
<script>
    $('#productTable').DataTable();
    // Hide the message after 5 seconds (5000 milliseconds)
    setTimeout(function () {
        $("#tempMessage").fadeOut("slow");
    }, 1000);
</script>


